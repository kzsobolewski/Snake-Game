<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoardActivity">

    <TextView
        android:id="@+id/best_name_text_leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:textSize="30dp"
        android:text="bestname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/best_score_ldr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="score"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/best_name_text_leaderboard" />

    <TextView
        android:id="@+id/prev_name_ldr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="prevName"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/best_name_text_leaderboard"
        app:layout_constraintTop_toBottomOf="@+id/best_name_text_leaderboard" />

    <TextView
        android:id="@+id/prevScore_ldr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="score"
        app:layout_constraintEnd_toEndOf="@+id/best_score_ldr"
        app:layout_constraintTop_toTopOf="@+id/prev_name_ldr" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score"
        app:layout_constraintBottom_toTopOf="@+id/best_name_text_leaderboard"
        app:layout_constraintStart_toStartOf="@+id/best_name_text_leaderboard" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Player"
        app:layout_constraintBottom_toTopOf="@+id/prev_name_ldr"
        app:layout_constraintStart_toStartOf="@+id/prev_name_ldr" />
</android.support.constraint.ConstraintLayout>